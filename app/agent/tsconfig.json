{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "declaration": true,
    "noEmit": false,
    "types": ["bun-types"]
  },
  "include": ["src/**/*.ts", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
