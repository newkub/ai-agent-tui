{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"],
    "paths": {
      "@newkub/ai": ["../../packages/ai/src/index.ts"],
      "@newkub/git": ["../../packages/git/src/index.ts"]
    }
  },
  "include": ["src/**/*", "scripts/checkConfig.ts"],
  "exclude": ["node_modules", "dist"]
}
