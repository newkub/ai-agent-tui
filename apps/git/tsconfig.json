{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "types": ["bun-types"],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@newkub/ai": ["../../packages/ai/src/index.ts"],
      "@newkub/git": ["../../packages/git/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
