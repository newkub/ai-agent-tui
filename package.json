{
  "name": "ai-coding",
  "version": "1.0.0",
  "description": "A CLI tool for AI-assisted coding",
  "main": "dist/index.js",
  "private": true,
  "packageManager": "bun@1.2.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "bun run app/agent/index.ts --watch",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "start": "turbo run build && tsc",
    "tsc": "tsc --noEmit",
    "biome": "biome check .",
    "biome:fix": "biome check --apply .",
    "release": "release-it"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.13.10",
    "bun-types": "latest",
    "git-ai-assistant": "^0.1.12",
    "release-it": "^18.1.2",
    "turbo": "2.4.4",
    "typescript": "^5.8.2"
  }
}